<%= stylesheet_link_tag 'new','common' %>
<h2>スケジュール新規作成</h2>
<div class="error"><%= render "shared/error", obj: @task %></div>

<%= form_with model: @task, local: true do |f| %>
<table>
    <tr>
        <th><%= f.label :title, "タイトル" %></th>
        <td><%= f.text_field :title %></td>
    </tr>
    <tr>
        <th><%= f.label :start_day, "開始日" %></th>
        <td><%= f.datetime_field :start_day %></td>
    </tr>
    <tr>
        <th><%= f.label :end_day, "終了日" %></th>
        <td><%= f.datetime_field :end_day %></td>
    </tr>
    <tr>
        <th><%= f.label :all_day, "終日" %></th>
        <td><%= f.check_box :all_day %>
            <p>終日の場合はチェックを入れます</p>
        </td>
    </tr>
    <tr>
        <th><%= f.label :memo, "スケジュールメモ" %></th>
        <td><%= f.text_area :memo, size: "40x10" %></td>
    </tr>
    
</table>
<p><%= f.submit "スケジュールを新規登録する"%></p>
<% end %>
<p><%= link_to "スケジュール一覧に戻る", tasks_path %></p>
